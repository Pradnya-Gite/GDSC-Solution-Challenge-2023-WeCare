<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context="com.example.afinal.MainActivity">


    <TextView
        android:id="@+id/person_name"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="Welcome"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="407dp"
        android:layout_height="599dp"
        android:background="@drawable/bottom_background_light_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962">

        <TextView
            android:id="@+id/home_remedies_text"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Home Remedies"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/home_remedies_image"
            app:layout_constraintStart_toStartOf="@+id/home_remedies_image"
            app:layout_constraintTop_toBottomOf="@+id/home_remedies_image" />

        <ImageButton
            android:id="@+id/home_remedies_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="56dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/read_image"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home_remedies" />

        <TextView
            android:id="@+id/read_text"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Read it"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/read_image"
            app:layout_constraintStart_toStartOf="@+id/read_image"
            app:layout_constraintTop_toBottomOf="@+id/read_image" />

        <ImageButton
            android:id="@+id/read_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="36dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/read_it" />


        <ImageButton
            android:id="@+id/video_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="76dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/today"
            app:layout_constraintEnd_toStartOf="@+id/diary_image"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/videos" />

        <TextView
            android:id="@+id/video_text"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Videos"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/video_image"
            app:layout_constraintStart_toStartOf="@+id/video_image"
            app:layout_constraintTop_toBottomOf="@+id/video_image" />

        <ImageButton
            android:id="@+id/diary_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="136dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/diary" />

        <TextView
            android:id="@+id/diary_text"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:text="Diary"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/diary_image"
            app:layout_constraintStart_toStartOf="@+id/diary_image"
            app:layout_constraintTop_toBottomOf="@+id/diary_image" />

        <Button
            android:id="@+id/home"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:text="Home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/today"
            app:layout_constraintHorizontal_bias="0.258"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_image"
            app:layout_constraintVertical_bias="0.887" />

        <Button
            android:id="@+id/today"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginEnd="28dp"
            android:text="Today"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profile"
            app:layout_constraintTop_toBottomOf="@+id/diary_image"
            app:layout_constraintVertical_bias="0.878" />

        <Button
            android:id="@+id/profile"
            android:layout_width="111dp"
            android:layout_height="47dp"
            android:layout_marginEnd="16dp"
            android:text="Profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diary_image"
            app:layout_constraintVertical_bias="0.876" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>